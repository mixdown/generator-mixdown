{
  "overlay": true,
  "plugins": {
    "router": {
      "options": {
        "routes": {
          "css": {
            "method": "GET",
            "name": "css",
            "path": "/css/:css_src",
            "description": "CSS resources",
            "handler": "css",
            "params": {
              "css_src": {
                "kind": "rest",
                "regex": "(.*\\.css)",
                "default": "",
                "enabled": true
              }
            },
            "enabled": true
          }
        }
      }
    }
  }
}
