{
  "overlay": true,
  "plugins": {
    "router": {
      "options": {
        "routes": {
          "asset": {
            "method": "GET",
            "name": "asset",
            "path": "/asset",
            "description": "Serves any file-based asset.  Put the path on the querystring.",
            "handler": "asset",
            "params": {
              "asset_src": {
                "kind": "query",
                "regex": "(.*)",
                "default": "",
                "enabled": true
              }
            },
            "enabled": true
          }
        }
      }
    }
  }
}
