{
  "overlay": true,
  "plugins": {
    "router": {
      "options": {
        "routes": {
          "img": {
            "method": "GET",
            "name": "img",
            "path": "/img/?:img_src",
            "description": "Serves images.",
            "handler": "img",
            "params": {
              "img_src": {
                "kind": "rest",
                "regex": "(.*)",
                "default": "",
                "enabled": true
              }
            },
            "enabled": true
          }
        }
      }
    }
  }
}
